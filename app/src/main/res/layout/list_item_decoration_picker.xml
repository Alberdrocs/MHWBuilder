<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="decoration"
            type="org.ieselcaminas.alberto.finalproject.mhwbuilder.database.decorations.Decoration" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/decorationPickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#B5000000"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/decorationImageDecorationPickerImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="17dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/gem_level_4" />

        <TextView
            android:id="@+id/decorationNameDecorationPickerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Decoration name"
            android:textColor="#F7F7F7"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toEndOf="@+id/decorationImageDecorationPickerImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/decorationSkillName1DecorationPickerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:text="Skill Name 1"
            android:textColor="#F7F7F7"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toEndOf="@+id/decorationImageDecorationPickerImageView"
            app:layout_constraintTop_toBottomOf="@+id/decorationNameDecorationPickerTextView" />

        <TextView
            android:id="@+id/decorationSkillName2DecorationPickerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Skill Name 2"
            android:textColor="#F7F7F7"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toEndOf="@+id/decorationImageDecorationPickerImageView"
            app:layout_constraintTop_toBottomOf="@+id/decorationSkillName1DecorationPickerTextView" />

        <LinearLayout
            android:id="@+id/detailsDecorationPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/decorationSkillName2DecorationPickerTextView"
            app:layout_constraintVertical_bias="0.027">

            <TextView
                android:id="@+id/decorationDescription1DecorationPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:text="TextView"
                android:textColor="#F7F7F7"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/decorationDescription2DecorationPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:text="TextView"
                android:textColor="#F7F7F7"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/addDecorationDecorationPickerButton"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Add decoration" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>